  .post-content
    = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form|
      %span.choice-area
        %span
          = link_to "映画", root_path, class:"choice-btn"
        %span
          = link_to "TV番組", index_tv_products_path, class:"choice-btn"
      = form.text_field :keyword, placeholder: "作品名、キーワード", class: "search-input"
      = form.submit value: "キーワード検索", class: "search-btn"
      %span.tag-search
        = link_to "タグ一覧検索", tag_search_products_path, class:"tag-search-btn"
      %span.like-tag よく使われるタグ
      - tag_cloud(@toptags,"") do |tag|
        %span.like-tag-list
          .like-tag-label
            = link_to "＃#{tag.name}", tags_index_products_path(tag_name: tag.name), class: "like-tag-text"
    .category-name
      =link_to "海外ドラマ ＞",category_show_product_path(13), class: "category-show"
    = render partial: "product-card", locals: {products: @wdrama}
    .category-name
      =link_to "国内ドラマ ＞", category_show_product_path(14), class: "category-show"
    = render partial: "product-card", locals: {products: @drama}
    .category-name
      =link_to "コメディ ＞", category_show_product_path(15), class: "category-show"
    = render partial: "product-card", locals: {products: @tvcomedy}
    .category-name
      =link_to "韓国ドラマ ＞", category_show_product_path(16), class: "category-show"
    = render partial: "product-card", locals: {products: @korea}
    .category-name
      =link_to "アニメ ＞", category_show_product_path(17), class: "category-show"
    = render partial: "product-card", locals: {products: @anime}
    .category-name
      =link_to "その他 ＞", category_show_product_path(18), class: "category-show"
    = render partial: "product-card", locals: {products: @tvetc}
    