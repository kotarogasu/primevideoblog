.post-content
  = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form|
    %span.choice-area
    - @choice.each do |choice| 
      %span
        = link_to "#{choice.name}", product_path(choice.id), class:"choice-btn"
    = form.text_field :keyword, placeholder: "作品名、キーワード", class: "search-input"
    = form.submit value: "キーワード検索", class: "search-btn"
    %span.tag-search
      = link_to "タグ一覧検索", tag_search_product_path(1), class:"tag-search-btn"
    %span.like-tag よく使われるタグ
    - tag_cloud(@toptags,"") do |tag|
      %span.like-tag-list
        .like-tag-label
          = link_to "＃#{tag.name}", tags_index_products_path(tag_name: tag.name), class: "like-tag-text"
  - @categories.each do |category|
    .category-name
      =link_to "#{category.name} ＞", category_show_product_path(category.id), class: "category-show"
    = render partial: "product-card", locals: {products: category.products}
  
            