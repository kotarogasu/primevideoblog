<div class="contents row">
  <div class="container">
    <%= form_with(model: @tweet, local: true) do |form| %>
      <h3>
        投稿する
      </h3>
      <%= form.text_field :name, placeholder: "ユーザーネームを入力してください" %>
      <%= form.text_field :title, placeholder: "タイトルを入力してください" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_field :link, placeholder: "linkを貼ってください" %>
      <%= form.text_area :text, placeholder: "text" , rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>
